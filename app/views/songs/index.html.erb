
<%= link_to 'Add Song', new_song_path, :class => 'songAdd' %>
<br><br>
<% @current_user.songs.reverse.each do |song|%>
    <div class="songs">
        <h1> <%= song.title if @current_user.songs.present? %> </h1>
        <%= cl_image_tag(song.image, :class => 'coverArt') if song.image.present? %>
        
        <br>
        <iframe id="sc-widget" width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=<%= song.sound %>&show_artwork=true"></iframe>
            <script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>
                <script type="text/javascript">
                (function(){
                    var widgetIframe = document.getElementById('sc-widget'),
                        widget       = SC.Widget(widgetIframe),
                        newSoundUrl = '<%= song.sound %>';

                    widget.bind(SC.Widget.Events.READY, function() {
                    // load new widget
                    widget.bind(SC.Widget.Events.FINISH, function() {
                        widget.load(newSoundUrl, {
                        show_artwork: false
                        });
                    });
                    });

                }());
            </script>

        <h2><%= song.bpm if @current_user.songs.present? %> BPM</h2>
        <% song.genres.each  do |genre|%>
            #<%= genre.name %>
        <% end %>
            <%= link_to 'Delete Song', song, :method => 'delete', :class => 'submitButton' ,:data => {:confirm => 'Are you sure?'} %>
    </div>
    <br>

<% end%>



